create table offer(
    User_Id int NOT NULL,
    Specialization_ID int NOT NULL,
    Title varchar(255) NOT NULL,
    Valoration_Average int NOT NULL,
    Personal_Valoration int NOT NULL,
    Coin_Price double NOT NULL,
    Description varchar(255) NOT NULL,
    Keywords varchar(255) NOT NULL,
    PRIMARY KEY (User_Id,Specialization_ID),
    FOREIGN KEY (User_id) REFERENCES User(id)
);

insert into offer(User_Id,Specialization_ID,Title,Valoration_Average,Personal_Valoration,Coin_Price,Description,Keywords) 
